{
    "openapi": "3.0.0",
    "info": {
        "title": "Start Business Documentation",
        "description": "This is a api start business",
        "version": "1.0.0",
        "contact": {
            "email": "anderson.ferreira@aluno.ufop.br"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Create a user",
                "description": "Create a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": "string",
                                    "email": "string",
                                    "password": "string"
                                }
                            },
                            "example": {
                                "name": "John Doe",
                                "email": "john@example.com",
                                "password": "12345678"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Email address already used"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Find a user",
                "description": "Find a user by id",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": {
                    "id": "id",
                    "in": "path",
                    "description": "User id",
                    "require": true,
                    "schema": {
                        "type": "string"
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        },
        "/sessions": {
            "post": {
                "tags": [
                    "Sessions"
                ],
                "summary": "Authentication User",
                "description": "Authentication user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Email or password invalid!"
                    }
                }
            }
        }
    }
}