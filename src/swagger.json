    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Create a user",
                "description": "Create a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "John Doe",
                                        "email": "john@example.com",
                                        "password": "12345678"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Email address already used"
                    },
                    "200": {
                        "description": "User created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/users/{id}": {
            "put": {
                "tags": [
                    "Users"
                ],
                "summary": "Update a user",
                "description": "Update a user by id",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "User id is required"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "Josy Doe",
                                        "email": "josy@example.com",
                                        "password": "123456"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "Users"
                ],
                "summary": "Delete a user",
                "description": "Delete a user by id",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "User id is required"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User removed successfully"
                    },
                    "400": {
                        "description": "Invalid id"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/users/profile": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get profile",
                "description": "Get profile to user",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/avatar": {
            "patch": {
                "tags": [
                    "Users"
                ],
                "summary": "Update a user avatar",
                "description": "Update a user avatar image",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "avatar": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "Image avatar updated"
                    },
                    "404": {
                        "description": "User not found"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/sessions": {
            "post": {
                "tags": [
                    "Sessions"
                ],
                "summary": "Authentication User",
                "description": "Authentication user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Email or password invalid!"
                    }
                }
            }
        },
        "/sessions/refresh-token": {
            "post": {
                "tags": [
                    "Sessions"
                ],
                "summary": "Refresh token",
                "description": "Generate a new refresh token to the user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "token": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Refresh token generated successfully",
                        "schema": {
                            "type": "object",
                            "$ref": "#/components/schemas/UserTokens"
                        }
                    },
                    "400": {
                        "description": "Refresh token does not exists"
                    }
                }
            }
        },
        "/password/forgot": {
            "post": {
                "tags": [
                    "Password"
                ],
                "summary": "Forgot password",
                "description": "Forgot password",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "User does not exists"
                    }
                }
            }
        },
        "/password/reset": {
            "post": {
                "tags": [
                    "Password"
                ],
                "summary": "Reset password",
                "description": "Reset password",
                "parameters": [
                    {
                        "name": "token",
                        "in": "query",
                        "description": "Token password",
                        "required": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Token does not exists"
                    }
                }
            }
        },
        "/companies": {
            "post": {
                "tags": [
                    "Companies"
                ],
                "summary": "Create a company",
                "description": "Create a new company",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Company"
                            },
                            "examples": {
                                "company": {
                                    "value": {
                                        "name": "Business Example",
                                        "cnpj": "123456",
                                        "category": "Category Example",
                                        "description": "Description Example",
                                        "services": [
                                            "Service 1",
                                            "Service 2"
                                        ],
                                        "schedules": [
                                            {
                                                "day_of_week": "Saturday",
                                                "opening_time": "08:00",
                                                "closing_time": "18:00",
                                                "lunch_time": "12:00-13:00"
                                            },
                                            {
                                                "day_of_week": "Tuesday",
                                                "opening_time": "08:00",
                                                "closing_time": "18:00",
                                                "lunch_time": "12:00-13:00"
                                            }
                                        ],
                                        "physical_localization": true,
                                        "telephone": "123456",
                                        "whatsapp": "123456",
                                        "email": "email@example.com",
                                        "website": "http://www.example.com",
                                        "address": {
                                            "cep": "123456",
                                            "street": "Street Test",
                                            "district": "District Test",
                                            "number": 123,
                                            "state": "MG",
                                            "city": "City Test"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Company already exists"
                    },
                    "200": {
                        "description": "Company created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Company"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/companies/images/{id}": {
            "post": {
                "tags": [
                    "Companies"
                ],
                "summary": "Upload a company image",
                "description": "Upload a image to company",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Company id is required"
                    }
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "company": {
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "format": "binary"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Company image updated"
                    },
                    "400": {
                        "description": "Company does not exist"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/companies/{id}": {
            "get": {
                "tags": [
                    "Companies"
                ],
                "summary": "Find a company",
                "description": "Find a company by id",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Company id is required"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Company found successfully",
                        "schema": {
                            "$ref": "#/components/schemas/Company"
                        }
                    },
                    "400": {
                        "description": "Company does not exist"
                    },
                    "500": {
                        "description": "Internal Server Error"
